<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"  
        android:layout_width="50dip"  
        android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/infoboxbar" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:editable="false"
                android:ems="10"
                android:text="设置"
                android:textColor="#FFFFFF" >

                <requestFocus />
            </EditText>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/exitButton"
            android:layout_below="@+id/frameLayout1"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp" >
            
            

            <EditText
                android:id="@+id/connectInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:ems="10"
                android:focusable="false"
                android:text="实时监控服务"
                
                android:textSize="20dp" />

            <com.dragon.wifiguard.SwitchButton
                android:id="@+id/wiperSwitch1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/connectInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@null"
                android:ems="10"
                android:focusable="false"
                android:text="偷渡监控服务"
                
                android:textSize="20dp" />

            <com.dragon.wifiguard.SwitchButton
                android:id="@+id/wiperSwitch2"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="80dp" />
            
            
            <EditText
                android:id="@+id/ignoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:background="@null"
                android:ems="10"
                android:focusable="false"
                android:text="忽略监控列表"
                
                android:textSize="20dp" />
            <ImageButton
            android:id="@+id/ignoreButton"
            android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="130dp"
            
            android:background="@drawable/home_btn_bg_s"
            android:scaleType="fitCenter"
            android:src="@drawable/ignorebtn" />
            
            
            <EditText
                android:id="@+id/EditText01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@null"
                android:editable="false"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:text="@string/about"
                android:textSize="14dp" />

</FrameLayout>

        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@drawable/btn_exit"
            android:scaleType="center"
            android:src="@drawable/exittext" />

</RelativeLayout>